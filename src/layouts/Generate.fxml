<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?.
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox 
		xmlns:fx="http://javafx.com/fxml/1"
		fx:controller="edu.cnm.deepdive.security.GuardUI"
		alignment="top_center"
		spacing="10" >
	
	<padding>
	
		<Insets
			top="10"
			right="0"
			left="0"
			bottom="10" />
			
	</padding>
	
	<Text id="header" text="%header" />
	
	<TabPane tabClosingPolicy="UNAVAILABLE">
	
		<Tab text="%password.tab.name">
		
			<VBox 
					id="password-options"
					alignment="center_left"
					fillWidth="true"
					spacing="15">
					
				<padding>
				
					<Insets 
							top="20"
							right="20"
							left="20"
							bottom="20" />
							
				</padding>
					
				<CheckBox 
					fx:id="upperIncluded" 
					id="upper-included" 
					text="%include.upper.label" 
					onAction="#checkPasswordOptions" />
					
				<CheckBox 
					text="%include.lower.label" 
					fx:id="lowerIncluded" 
					id="lower-included"
					onAction="#checkPasswordOptions" />
					
				<CheckBox 
					text="%include.digits.label" 
					fx:id="digitsIncluded" 
					id="digits-included" 
					onAction="#checkPasswordOptions" />
					
				<CheckBox 
					text="%include.punctuation.label" 
					fx:id="punctuationIncluded" 
					id="punctuation-included"
					onAction="#checkPasswordOptions" />
					
				<CheckBox 
					text="%exclude.ambiguous.label" 
					fx:id="ambiguousExcluded" 
					id="ambiguous-excluded"
					onAction="#checkPasswordOptions" />
					
				<Label 
					fx:id="passwordLengthLabel"
					id="password-length-label"
					text="%password.length.label"
					mnemonicParsing="true" />
					
				<Slider 
					fx:id="passwordLength"
					id="password-length"
					min="8"
					max="24"
					majorTickUnit="4"
					minorTickCount="3"
					blockIncrement="1"
					showTickLabels="true"
					showTickMarks="true"
					snapToTicks="true" />
					
				<HBox
						alignment="center"
						spacing="10" >
					<Button
							fx:id="generatePassword"
							id="generate-password"
							text="%generate.password.label"
							onAction="#generatePassword" />
							
					<TextField
							fx:id="password"
							id="password"
							editable="false"
							prefColumnCount="18"
				
				</HBox>
					
			</VBox>
			
		</Tab>
		
		<Tab text="%passphrase.tab.name" >
		
			<VBox
					id="passphrase-options"
					alignment="center_left"
					fillWidth="true"
					spacing="15">
					
				<padding>
				
					<Insets
							top="20"
							right="20"
							left="20"
							bottom="20" />
							
				</padding>
					
			</VBox>
			
		</Tab>
		
	</TabPane>
	
</VBox>

